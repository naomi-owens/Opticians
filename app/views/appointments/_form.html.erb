<%= form_for(@appointment) do |f| %>
  <% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% @appointment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Start Time" %><br />
    <%= f.time_select :starttime%>
  </div>
  <div class="field">
    <%= f.label "End Time" %><br />
    <%= f.time_select :endtime %>
  </div>
  <div class="field">
    <%= f.label "Date" %><br />
        <%= f.date_select :date, :start_year => 2012, :end_year => 2013 %>
  </div>
  <div class="field">
    <%= f.label "Appointment Type" %><br />
    <%= f.select :appointmenttype , ["Eye Examination", "Contact Lens Fitting", "Drivers License Eye Examination"] %>
  </div>
  <div class="field">
    <%= f.label "Status" %><br />
    <%= f.select :status , ["Not Started", "In Progress", "Finished"] %>
  </div>
  <div class="field">
    <%= f.label :patient_id %><br />
    <%= f.collection_select :patient_id, Patient.all, :id, :firstname %>
  </div>
  <div class="field">
    <%= f.label :optician_id %><br />
    <%= f.collection_select :optician_id, Optician.all, :id, :firstname %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <!--<%= button_to "View Your Appointments", @appointment, :method => :get %>
  <%= link_to 'View Your Appointments', appointments_path %>-->
  <%= render '/patients/appointments'%>
<% end %>
